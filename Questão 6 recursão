#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/*
Questão 26
Escreva uma funação recursiva para verificar se string contém apenas dígitos.
*/

int verifyString(char* string) {
    if(*string == '\0') {
        return 0;
    }

    if('0' == *string || '1' == *string || '2' == *string || '3' == *string || '4' == *string || '5' == *string || '6' == *string || '7' == *string || '8' == *string || '9' == *string) {
        return 1;
    }

    return verifyString(string + 1);
}

void whereThingsHappen() {
    printf("Inform a string:\n");
    char string[100];
    fgets(string, 100, stdin);
    string[strcspn(string, "\n")] = '\0';
    if(verifyString(string)) {
        printf("It has numbers\n");
    } else {
        printf("It doesn't have numbers\n");
    }
}

int main() {
    whereThingsHappen();
    return 0;
}
